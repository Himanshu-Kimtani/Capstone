<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Support Management</title>
    <link rel="stylesheet" href="/css/styles.css" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
  </head>
  <body class="admin-body">
    <%- include('partials/admin-header') %>

    <div class="container mt-5">
      <div class="d-flex justify-content-between align-items-center mb-4">
        <h3>Support Ticket Management</h3>
        <a href="/admin" class="btn btn-secondary">Back to Dashboard</a>
      </div>

      <div class="card">
        <div class="card-header">
          <h5 class="mb-0">Support Tickets</h5>
        </div>
        <div class="card-body">
          <% if (supportTickets && supportTickets.length > 0) { %>
          <div class="accordion" id="ticketAccordion">
            <% supportTickets.forEach((ticket, index) => { %>
            <div class="accordion-item">
              <h2 class="accordion-header">
                <button
                  class="accordion-button <%= ticket.status === 'pending' ? 'bg-warning text-dark' : '' %> <%= ticket.status === 'responded' ? 'bg-success text-white' : '' %>"
                  type="button"
                  data-bs-toggle="collapse"
                  data-bs-target="#ticket<%= ticket.id %>"
                >
                  #<%= ticket.id %> - <%= ticket.subject %> -
                  <small class="ms-2">
                    From: <%= ticket.User ? ticket.User.name : 'Guest' %> |
                    Status: <%= ticket.status.charAt(0).toUpperCase() +
                    ticket.status.slice(1) %> | <%= new
                    Date(ticket.createdAt).toLocaleString() %>
                  </small>
                </button>
              </h2>
              <div
                id="ticket<%= ticket.id %>"
                class="accordion-collapse collapse"
              >
                <div class="accordion-body">
                  <div class="mb-3">
                    <h6>Message:</h6>
                    <p class="p-3 bg-light rounded"><%= ticket.message %></p>
                  </div>

                  <% if (ticket.adminResponse) { %>
                  <div class="mb-3">
                    <h6>Admin Response:</h6>
                    <p class="p-3 bg-light rounded">
                      <%= ticket.adminResponse %>
                    </p>
                    <small class="text-muted">
                      Responded on: <%= new
                      Date(ticket.respondedAt).toLocaleString() %>
                    </small>
                  </div>
                  <% } %> <% if (ticket.status === 'pending') { %>
                  <form
                    action="/admin/support/<%= ticket.id %>/respond"
                    method="POST"
                  >
                    <div class="mb-3">
                      <label for="response<%= ticket.id %>" class="form-label"
                        >Your Response:</label
                      >
                      <textarea
                        class="form-control"
                        id="response<%= ticket.id %>"
                        name="response"
                        rows="4"
                        required
                      ></textarea>
                    </div>
                    <button type="submit" class="btn btn-primary">
                      Send Response
                    </button>
                  </form>
                  <% } %>
                </div>
              </div>
            </div>
            <% }); %>
          </div>
          <% } else { %>
          <p class="text-center text-muted py-5">No support tickets found.</p>
          <% } %>
        </div>
      </div>
    </div>

    <%- include('partials/admin-footer') %>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
  </body>
</html>
