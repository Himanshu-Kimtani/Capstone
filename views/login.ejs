<%- include('partials/header') %>

<div class="login-container">
  <div class="login-card">
    <div class="login-header">
      <h2>Welcome Back</h2>
      <p>Sign in to continue your music journey</p>
    </div>

    <% if (locals.error && error.length > 0) { %>
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
      <i class="fas fa-exclamation-circle me-2"></i> <%= error %>
      <button
        type="button"
        class="btn-close"
        data-bs-dismiss="alert"
        aria-label="Close"
      ></button>
    </div>
    <% } %> <% if (locals.success && success.length > 0) { %>
    <div class="alert alert-success alert-dismissible fade show" role="alert">
      <i class="fas fa-check-circle me-2"></i> <%= success %>
      <button
        type="button"
        class="btn-close"
        data-bs-dismiss="alert"
        aria-label="Close"
      ></button>
    </div>
    <% } %>

    <form action="/users/login" method="POST" class="login-form">
      <div class="form-group">
        <label for="email">
          <i class="fas fa-envelope"></i>
          <span>Email Address</span>
        </label>
        <input
          type="email"
          id="email"
          name="email"
          placeholder="Enter your email"
          required
        />
      </div>

      <div class="form-group">
        <label for="password">
          <i class="fas fa-lock"></i>
          <span>Password</span>
        </label>
        <input
          type="password"
          id="password"
          name="password"
          placeholder="Enter your password"
          required
        />
      </div>

      <button type="submit" class="login-button">
        <span>Login</span>
        <i class="fas fa-arrow-right"></i>
      </button>
    </form>

    <div class="login-footer">
      <p>Don't have an account? <a href="/users/signup">Sign Up</a></p>
    </div>
  </div>
</div>

<style>
  .login-container {
    min-height: 100vh;
    display: flex;
    align-items: center;
    justify-content: center;
    background: linear-gradient(135deg, #0a0f1d 0%, #1e1246 100%);
    padding: 2rem;
  }

  .login-card {
    background: rgba(25, 33, 55, 0.8);
    backdrop-filter: blur(10px);
    border-radius: 20px;
    padding: 3rem 2rem;
    width: 100%;
    max-width: 450px;
    box-shadow: 0 15px 35px rgba(0, 0, 0, 0.5);
    border: 1px solid rgba(255, 255, 255, 0.1);
    position: relative;
    overflow: hidden;
  }

  .login-card::before {
    content: "";
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 5px;
    background: linear-gradient(90deg, #a267ff, #7c4dff);
  }

  .login-header {
    text-align: center;
    margin-bottom: 2.5rem;
  }

  .login-header h2 {
    color: white;
    font-size: 2.2rem;
    font-weight: 700;
    margin-bottom: 0.5rem;
  }

  .login-header p {
    color: rgba(255, 255, 255, 0.7);
    font-size: 1rem;
  }

  .login-form {
    margin-bottom: 2rem;
  }

  .form-group {
    margin-bottom: 1.5rem;
  }

  .form-group label {
    display: flex;
    align-items: center;
    color: rgba(255, 255, 255, 0.9);
    margin-bottom: 0.75rem;
    font-weight: 500;
  }

  .form-group label i {
    color: #a267ff;
    margin-right: 0.75rem;
    font-size: 1.1rem;
  }

  .form-group input {
    width: 100%;
    padding: 1rem;
    background: rgba(255, 255, 255, 0.1);
    border: 1px solid rgba(255, 255, 255, 0.1);
    border-radius: 10px;
    color: white;
    font-size: 1rem;
    transition: all 0.3s ease;
  }

  .form-group input:focus {
    background: rgba(255, 255, 255, 0.15);
    border-color: #a267ff;
    box-shadow: 0 0 0 3px rgba(162, 103, 255, 0.25);
    outline: none;
  }

  .form-group input::placeholder {
    color: rgba(255, 255, 255, 0.5);
  }

  .login-button {
    width: 100%;
    padding: 1rem;
    background: linear-gradient(45deg, #a267ff, #7c4dff);
    border: none;
    border-radius: 10px;
    color: white;
    font-size: 1.1rem;
    font-weight: 600;
    cursor: pointer;
    transition: all 0.3s ease;
    display: flex;
    align-items: center;
    justify-content: center;
    box-shadow: 0 5px 15px rgba(162, 103, 255, 0.4);
  }

  .login-button span {
    margin-right: 0.75rem;
  }

  .login-button i {
    opacity: 0;
    transform: translateX(-10px);
    transition: all 0.3s ease;
  }

  .login-button:hover {
    transform: translateY(-3px);
    box-shadow: 0 8px 25px rgba(162, 103, 255, 0.6);
  }

  .login-button:hover i {
    opacity: 1;
    transform: translateX(0);
  }

  .login-footer {
    text-align: center;
    color: rgba(255, 255, 255, 0.7);
  }

  .login-footer a {
    color: #a267ff;
    font-weight: 600;
    text-decoration: none;
    transition: color 0.3s ease;
  }

  .login-footer a:hover {
    color: #8a4dff;
    text-decoration: underline;
  }

  .alert {
    margin-bottom: 1.5rem;
    border-radius: 10px;
    padding: 1rem;
  }

  @media (max-width: 480px) {
    .login-card {
      padding: 2rem 1.5rem;
    }

    .login-header h2 {
      font-size: 1.8rem;
    }
  }
</style>

<%- include('partials/footer') %>
