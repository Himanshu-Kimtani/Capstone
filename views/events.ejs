<%- include('partials/header') %>
<div class="container">
  <h2 class="text-center text-purple">Upcoming Events</h2>
  <div class="row">
    <% events.forEach(event => { %>
    <div class="col-md-4">
      <div class="card bg-dark text-light my-2">
        <img src="/images/event-placeholder.jpg" class="card-img-top" />
        <div class="card-body">
          <h5 class="card-title"><%= event.name %></h5>
          <p><%= event.date.toDateString() %> - <%= event.location %></p>
          <p class="fw-bold">$<%= event.price %></p>
          <a href="/events/<%= event.id %>" class="btn btn-outline-primary"
            >View Details</a
          >
        </div>
      </div>
    </div>
    <% }) %>
  </div>
</div>
<%- include('partials/footer') %>
