<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Admin Gallery Management</title>

    <link rel="stylesheet" href="/css/styles.css" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="/socket.io/socket.io.js"></script>
    <script src="/js/admin-socket.js"></script>
  </head>

  <body class="admin-body">
    <%- include('partials/admin-header') %>

    <div class="container mt-5">
      <div class="d-flex justify-content-between align-items-center mb-4">
        <h3>Gallery Management</h3>
        <a href="/admin" class="btn btn-secondary">Back to Dashboard</a>
      </div>

      <div class="row">
        <div class="col-12">
          <div class="card">
            <div
              class="card-header d-flex justify-content-between align-items-center"
            >
              <h5 class="mb-0">Gallery Images</h5>
              <span
                >Total Images:
                <span id="totalGalleryCount"><%= totalImages %></span></span
              >
            </div>
            <div class="card-body">
              <div class="row">
                <% if (galleryImages && galleryImages.length > 0) { %> <%
                galleryImages.forEach(function(image) { %>
                <div class="col-md-3 mb-4" id="gallery-image-<%= image.id %>">
                  <div class="card">
                    <img
                      src="/uploads/gallery/<%= image.imageUrl %>"
                      class="card-img-top"
                      alt="Gallery Image"
                      style="height: 200px; object-fit: cover"
                    />
                    <div class="card-body">
                      <h6 class="card-subtitle mb-2 text-muted">
                        Uploaded by: <%= image.User ? image.User.name :
                        'Unknown' %>
                      </h6>
                      <p class="card-text">
                        <small
                          >Uploaded: <%= new
                          Date(image.createdAt).toLocaleDateString() %></small
                        >
                      </p>
                      <form
                        action="/admin/gallery/<%= image.id %>/delete"
                        method="POST"
                      >
                        <button
                          type="submit"
                          class="btn btn-danger btn-sm w-100"
                          onclick="return confirm('Are you sure you want to delete this image?')"
                        >
                          Delete
                        </button>
                      </form>
                    </div>
                  </div>
                </div>
                <% }); %> <% } else { %>
                <div class="col-12 text-center py-5">
                  <p class="text-muted">No gallery images found.</p>
                </div>
                <% } %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <%- include('partials/admin-footer') %>
  </body>
</html>
