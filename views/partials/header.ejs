<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title><%= title || "Vynyl" %></title>
    <link rel="stylesheet" href="/css/styles.css" />
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
    />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css"
    />
    <style>
      /* Dropdown menu styling fixes */
      .dropdown-menu {
        background-color: #131a31;
        border: 1px solid rgba(162, 103, 255, 0.2);
        box-shadow: 0 5px 20px rgba(0, 0, 0, 0.5);
        margin-top: 10px;
        border-radius: 8px;
        overflow: hidden;
        z-index: 1030;
        position: absolute;
      }

      .dropdown-menu-dark {
        background-color: #131a31;
      }

      .dropdown-item {
        color: rgba(255, 255, 255, 0.8);
        padding: 10px 20px;
        transition: all 0.2s ease;
      }

      .dropdown-item:hover,
      .dropdown-item:focus {
        background-color: rgba(162, 103, 255, 0.2);
        color: #a267ff;
        transform: translateX(5px);
      }

      .dropdown-divider {
        border-color: rgba(255, 255, 255, 0.1);
        margin: 0.5rem 0;
      }

      /* Custom dropdown styling */
      .custom-dropdown {
        position: relative;
        display: inline-block;
      }

      .custom-dropdown-menu {
        display: none;
        position: absolute;
        right: 0;
        background-color: #131a31;
        border: 1px solid rgba(162, 103, 255, 0.2);
        border-radius: 8px;
        box-shadow: 0 5px 20px rgba(0, 0, 0, 0.5);
        padding: 0.5rem 0;
        z-index: 1030;
        min-width: 180px;
        margin-top: 10px;
      }

      .custom-dropdown-menu.show {
        display: block;
      }

      .custom-dropdown-item {
        display: block;
        padding: 10px 20px;
        color: rgba(255, 255, 255, 0.8);
        text-decoration: none;
        transition: all 0.2s ease;
      }

      .custom-dropdown-item:hover {
        background-color: rgba(162, 103, 255, 0.2);
        color: #a267ff;
        transform: translateX(5px);
      }

      .custom-dropdown-divider {
        border-top: 1px solid rgba(255, 255, 255, 0.1);
        margin: 0.5rem 0;
      }

      .danger {
        color: #ff5252;
      }

      .danger:hover {
        color: #ff5252;
      }
    </style>
    <!-- Add Bootstrap JS in the header to ensure dropdown functionality -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
      document.addEventListener("DOMContentLoaded", function () {
        // Setup for custom dropdown
        const userBtn = document.getElementById("userDropdownBtn");
        if (userBtn) {
          userBtn.addEventListener("click", function (e) {
            e.preventDefault();
            e.stopPropagation();
            const menu = document.getElementById("userDropdownMenu");
            menu.classList.toggle("show");
          });

          // Close dropdown when clicking elsewhere
          document.addEventListener("click", function (e) {
            if (!e.target.closest(".custom-dropdown")) {
              const menus = document.querySelectorAll(".custom-dropdown-menu");
              menus.forEach((menu) => menu.classList.remove("show"));
            }
          });
        }
      });
    </script>
  </head>
  <body class="bg-dark text-light">
    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-black px-4">
      <a class="navbar-brand" href="/">
        <img src="/images/logo.png" alt="VYNYL Logo" class="navbar-logo" />
      </a>
      <button
        class="navbar-toggler"
        type="button"
        data-bs-toggle="collapse"
        data-bs-target="#navbarNav"
      >
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav ms-auto">
          <li class="nav-item">
            <a class="nav-link" href="/events">Events</a>
          </li>
          <% if (user) { %> <% if (user.role === "user") { %>
          <li class="nav-item">
            <a class="nav-link" href="/artists">Artists</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/moments/gallery">Feed</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/users/dashboard">Dashboard</a>
          </li>
          <% } else if (user.role === "artist") { %>
          <li class="nav-item">
            <a class="nav-link" href="/moments/gallery">Feed</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/artist/dashboard">Artist Profile</a>
          </li>
          <% } else if (user.role === "admin") { %>
          <li class="nav-item">
            <a class="nav-link" href="/artists">Artists</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/users">Users</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/moments/gallery">Feed</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/admin">Admin Panel</a>
          </li>
          <% } %>

          <!-- Add user profile icon and name -->
          <li class="nav-item">
            <span class="nav-link">
              <i class="fas fa-user me-1"></i> <%= user.full_name %>
            </span>
          </li>

          <!-- Logout link -->
          <li class="nav-item">
            <a class="nav-link text-danger" href="/users/logout">
              <i class="fas fa-sign-out-alt me-1"></i> Logout
            </a>
          </li>

          <% } else { %>
          <li class="nav-item">
            <a class="nav-link btn btn-primary text-light" href="/users/login"
              >Login</a
            >
          </li>
          <% } %>
        </ul>
      </div>
    </nav>
  </body>
</html>
