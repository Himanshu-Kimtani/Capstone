<header class="sticky-top">
  <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
    <div class="container">
      <!-- Logo -->
      <a class="navbar-brand" href="/">
        <img src="/images/logo.png" alt="Vynyl" height="40">
      </a>
      
      <!-- Hamburger menu for mobile -->
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarContent">
        <span class="navbar-toggler-icon"></span>
      </button>
      
      <div class="collapse navbar-collapse" id="navbarContent">
        <!-- Navigation Links -->
        <ul class="navbar-nav me-auto mb-2 mb-lg-0">
          <li class="nav-item">
            <a class="nav-link" href="/">Home</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/events">Events</a>
          </li>
          
          <% if (locals.user) { %>
            <!-- Links for logged-in users -->
            <% if (locals.user.role === 'user' || locals.user.role === 'admin') { %>
              <li class="nav-item">
                <a class="nav-link" href="/artists">Artists</a>
              </li>
            <% } %>
            
            <li class="nav-item">
              <a class="nav-link" href="/gallery">Gallery</a>
            </li>
            
            <% if (locals.user.role === 'admin') { %>
              <li class="nav-item">
                <a class="nav-link" href="/users">Users</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="/admin">Admin Dashboard</a>
              </li>
            <% } %>
          <% } %>
        </ul>
        
        <!-- Search Form -->
        <form class="d-flex me-2" action="/events/search" method="GET">
          <input class="form-control me-2" type="search" name="query" placeholder="Search events...">
          <button class="btn btn-outline-light" type="submit">Search</button>
        </form>
        
        <!-- Authentication -->
        <div class="navbar-nav">
          <% if (!locals.user) { %>
            <a class="nav-link" href="/login">Login</a>
            <a class="btn btn-primary ms-2" href="/signup">Sign Up</a>
          <% } else { %>
            <div class="dropdown">
              <a class="nav-link dropdown-toggle" href="#" id="profileDropdown" role="button" data-bs-toggle="dropdown">
                <%= locals.user.fullName %>
              </a>
              <ul class="dropdown-menu dropdown-menu-end">
                <% if (locals.user.role === 'artist') { %>
                  <li><a class="dropdown-item" href="/artists/profile">Artist Profile</a></li>
                <% } else { %>
                  <li><a class="dropdown-item" href="/users/profile">My Profile</a></li>
                <% } %>
                <li><hr class="dropdown-divider"></li>
                <li><a class="dropdown-item" href="/logout">Logout</a></li>
              </ul>
            </div>
          <% } %>
        </div>
      </div>
    </div>
  </nav>
</header> 