<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Create Artist</title>
    <link rel="stylesheet" href="/css/styles.css" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
  </head>
  <body class="admin-body">
    <%- include('partials/admin-header') %>

    <div class="container mt-5">
      <div class="row justify-content-center">
        <div class="col-md-8">
          <div class="card">
            <div class="card-header">
              <h3>Create New Artist</h3>
            </div>
            <div class="card-body">
              <form
                action="/admin/artist/create"
                method="POST"
                enctype="multipart/form-data"
              >
                <div class="mb-3">
                  <label for="name" class="form-label">Artist Name</label>
                  <input
                    type="text"
                    class="form-control"
                    id="name"
                    name="name"
                    required
                  />
                </div>

                <div class="mb-3">
                  <label for="bio" class="form-label">Biography</label>
                  <textarea
                    class="form-control"
                    id="bio"
                    name="bio"
                    rows="4"
                    required
                  ></textarea>
                </div>

                <div class="mb-3">
                  <label for="genre" class="form-label">Genre</label>
                  <input
                    type="text"
                    class="form-control"
                    id="genre"
                    name="genre"
                    required
                  />
                </div>

                <div class="mb-3">
                  <label for="socialMedia" class="form-label"
                    >Social Media Links</label
                  >
                  <input
                    type="text"
                    class="form-control mb-2"
                    id="instagram"
                    name="socialMedia[instagram]"
                    placeholder="Instagram URL"
                  />
                  <input
                    type="text"
                    class="form-control mb-2"
                    id="twitter"
                    name="socialMedia[twitter]"
                    placeholder="Twitter URL"
                  />
                  <input
                    type="text"
                    class="form-control"
                    id="facebook"
                    name="socialMedia[facebook]"
                    placeholder="Facebook URL"
                  />
                </div>

                <div class="mb-3">
                  <label for="picture" class="form-label">Artist Picture</label>
                  <input
                    type="file"
                    class="form-control"
                    id="picture"
                    name="picture"
                    accept="image/*"
                    required
                  />
                  <small class="text-muted"
                    >Upload a profile picture of the artist</small
                  >
                </div>

                <div class="mb-3">
                  <label for="username" class="form-label">Username</label>
                  <input
                    type="text"
                    class="form-control"
                    id="username"
                    name="username"
                    required
                  />
                  <small class="text-muted">Username for artist login</small>
                </div>

                <div class="mb-3">
                  <label for="email" class="form-label">Email Address</label>
                  <input
                    type="email"
                    class="form-control"
                    id="email"
                    name="email"
                    required
                  />
                  <small class="text-muted"
                    >Email will be used for login and communications</small
                  >
                </div>

                <div class="mb-3">
                  <label for="password" class="form-label">Password</label>
                  <input
                    type="password"
                    class="form-control"
                    id="password"
                    name="password"
                    required
                    minlength="8"
                  />
                  <small class="text-muted">Minimum 8 characters</small>
                </div>

                <div class="mb-3">
                  <label for="confirmPassword" class="form-label"
                    >Confirm Password</label
                  >
                  <input
                    type="password"
                    class="form-control"
                    id="confirmPassword"
                    name="confirmPassword"
                    required
                    minlength="8"
                  />
                </div>

                <div class="d-flex justify-content-between">
                  <button type="submit" class="btn btn-primary">
                    Create Artist
                  </button>
                  <a href="/admin" class="btn btn-secondary">Cancel</a>
                </div>
              </form>
            </div>
          </div>
        </div>
      </div>
    </div>

    <%- include('partials/admin-footer') %>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
      document
        .querySelector("form")
        .addEventListener("submit", function (event) {
          const password = document.getElementById("password").value;
          const confirmPassword =
            document.getElementById("confirmPassword").value;

          if (password !== confirmPassword) {
            event.preventDefault();
            alert("Passwords do not match");
          }
        });
    </script>
  </body>
</html>
